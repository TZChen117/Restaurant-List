<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <div class="container mt-3">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-utensils"></i> 餐廳名稱(*):
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="餐廳名稱" name="name" value="{{ restaurant.name }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-file-signature"></i> English name:
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="English name" name="name_en" value="{{ restaurant.name_en }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-filter"></i> 類別(*):
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="類別" name="category" value="{{ restaurant.category }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-phone"></i> 電話(*):
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="電話" name="phone" value="{{ restaurant.phone }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-images"></i> 照片:
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="照片" name="image" value="{{ restaurant.image }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-location-arrow"></i> 位置(*):
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="位置" name="location" value="{{ restaurant.location }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-map-marked-alt"></i> Google map:
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="Google map" name="google_map"
              value="{{ restaurant.google_map }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-star"></i> 評分(*):
          </span>
          <div class="input-group">
            <input class="col-8" type="text" placeholder="0~5" step="0.1" min="0" max="5" name="rating"
              value="{{ restaurant.rating }}">
          </div>
        </div>
        <div class="mb-1 row">
          <span class="col-3">
            <i class="fas fa-info-circle"></i> 描述:
          </span>
          <div class="input-group">
          </div>
          <input class="col-8" type="text" placeholder="描述" name="description" value="{{ restaurant.description }}">
        </div>
        <small class="col-2">(*):為必填項目</small>
        <button type="submit">Save</button>
        <a href="/">back</a>
</form>