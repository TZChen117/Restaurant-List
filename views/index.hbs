<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a href="./restaurants/new">
        <button class="btn btn-info text-white" type="submit">Create</button>
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<div class="function container my-1">
  <div class="row col-md-10 col-9 justify-content-between px-0 mx-auto">
    <!-- search bar -->
    <div class="container col-4 px-0 mx-0">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <!-- dropdown -->
    <div class="container btn-group dropdown col-4 px-0 mx-0">
      <button class="btn btn-light col text-left" type="button">
        Sort by category
      </button>
      <button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split col-2" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
      </button>
      <div class="dropdown-menu dropdown-menu-right col" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/A~Z">A~Z</a>
        <a class="dropdown-item" href="/Z~A">Z~A</a>
        <a class="dropdown-item" href="/category">類別</a>
        <a class="dropdown-item" href="/location">區域</a>
      </div>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container my-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div>
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-1">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-2">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <div class="restaurant-location mb-1">
                  <i class="fas fa-map-marker-alt pr-2"></i> {{this.location}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <div class="row justify-content-end my-1 mr-1">
            <a class="mx-2 align-self-center" href="./restaurants/{{ this._id }}"><u>Detail</u></a>
            <a class="mx-2 align-self-center" href="./restaurants/{{ this._id }}/edit"><u>Edit</u></a>
            <form class="mx-1" action="./restaurants/{{ this._id }}?_method=DELETE" method="POST"
              style="display: inline;">
              <button type="submit">Delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>